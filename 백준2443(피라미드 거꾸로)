#include <stdio.h>

int main() {
    int a;
    scanf("%d", &a);

    for (int i = 1; i <= a; i++) {
        // 공백 출력
        for (int j = 1; j < i; j++) {
            printf(" ");
        }
        // 별 출력
        for (int k = 1; k <= 2 * (a - i) + 1; k++) {
            printf("*");
        }
        // 줄 바꿈
        printf("\n");
    }

    return 0;
}
